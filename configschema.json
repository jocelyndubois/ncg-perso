{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"additionalProperties": false,

	"properties": {
		"pseudo": {
			"type": "string",
			"default": "PSEUDO"
		},
		"twitch": {
			"type": "object",
			"properties": {
				"clientId": {
					"type": "string",
					"default": "CLIENT-ID"
				},
				"clientSecret": {
					"type": "string",
					"default": "CLIENT-SECRET"
				},
				"accessToken": {
					"type": "string",
					"default": "ACCESS-TOKEN"
				},
				"userId": {
					"type": "integer",
					"default": 12345
				}
			}
		},
		"ssl": {
			"type": "object",
			"properties": {
				"enabled": {
					"type": "boolean",
					"default": "false"
				},
				"hostName": {
					"type": "string",
					"default": "hostname.com"
				},
				"keyPath": {
					"type": "string",
					"default": "/path/to/key"
				},
				"certificatePath": {
					"type": "string",
					"default": "/path/to/cert"
				}
			}
		},
		"pops": {
			"type": "object",
			"properties": {
				"width": {
					"type": "integer",
					"default": 1920
				},
				"height": {
					"type": "integer",
					"default": 1080
				}
			}
		}
	}
}
